<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:id="@+id/permissions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:textColor="?android:textColorPrimary"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="@string/permission_notifications" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="?android:textColorPrimary"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/details_notifications" />
        </LinearLayout>

        <Switch
            android:id="@+id/notifications_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="match_parent"
                android:textSize="24sp"
                android:textColor="?android:textColorPrimary"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/permission_voice" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="?android:textColorPrimary"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/details_voice" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/voice_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_record_voice_over_24dp"
            android:paddingStart="0dp"
            android:paddingEnd="4dp"
            android:contentDescription="@string/description_icon"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/usage_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:textColor="?android:textColorPrimary"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="@string/permission_usage" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="?android:textColorPrimary"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/details_usage" />
        </LinearLayout>

        <Switch
            android:id="@+id/usage_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optimization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="match_parent"
                android:textSize="24sp"
                android:textColor="?android:textColorPrimary"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/permission_optimization" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="?android:textColorPrimary"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/details_optimization" />
        </LinearLayout>

        <Switch
            android:id="@+id/optimization_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/accessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:textColor="?android:textColorPrimary"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="@string/permission_accessibility" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="?android:textColorPrimary"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/details_accessibility" />
        </LinearLayout>

        <Switch
            android:id="@+id/accessibility_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="end|center_vertical"
            android:layout_weight="1"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>
</LinearLayout>
</merge>